extends managerDashboardLayout
block content
    .container.py-5
      .d-flex.justify-content-between.align-items-center.mb-3
        h2.mb-0 Furniture Stock
        a.btn.btn-primary(href="/registerFurniture") Add Stock
      .input-group.mb-3
        input#searchInput.form-control(type="text" placeholder="Search Furniture stock...")

      .table-responsive
        table.table.table-striped.table-bordered.align-middle
          thead.custom-header
            tr
              th Product Name
              th Type
              th Cost Price (UGX)
              th Selling Price (UGX)
              th Quantity
              th Supplier
              th Date Received
              th Quality
              th Color
              th Measurements
              th Edit
              th Delete
          tbody#furnitureTableBody
            if furniture && furniture.length
              each item in furniture
                tr
                  td= item.productName
                  td= item.productType
                  td= item.costPrice
                  td= item.sellingPrice
                  td= item.quantity
                  td= item.supplierName
                  td= item.date.toLocaleDateString()
                  td= item.quality
                  td= item.color || ""
                  td= item.measurements || ""
                  td
                    a.btn.btn-sm.btn-info(href=`/editFurniture/${item._id}`) ‚úèÔ∏èEdit
                  td
                    button.btn.btn-sm.btn-danger(onclick=`deleteFurniture('${item._id}')`) üóë Delete
            else
              tr
                td(colspan="12") No furniture stock found.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    script(src="../js/furnitureStockDisplay.js")
