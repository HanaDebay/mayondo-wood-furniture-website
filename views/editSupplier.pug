doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Edit Supplier | MWF Ltd
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="../css/editSupplier.css")
  body
    nav.navbar
      .navbar-container
        .brand
          a(href="/") MWF
        ul.nav-links#navLinks
          li
            a(href="/manager-dashboard") Dashboard
          li
            a(href="/register-user") Register Sales-Agent
          li
            a(href="/registerFurniture") Register Furniture Stock
          li
            a(href="/registerWood") Register Wood Stock
          li
            a(href="/logout") Logout
        button.nav-toggle(type="button" id="navToggle" aria-label="Toggle navigation") â˜°

    .container.py-5
      .row.justify-content-center
        .col-lg-8
          .card.shadow-lg.rounded-4
            .card-header.bg-warning.text-dark.text-center.py-3.rounded-top-4
              h3 Edit Supplier
            .card-body.p-4
              form(action=`/edit-supplier/${supplier._id}?_method=PUT` method="POST" autocomplete="on" novalidate)
                .mb-3
                  label.form-label(for="supplierName") Supplier Name 
                    span.text-danger *
                  input#supplierName.form-control(
                    type="text" name="supplierName"
                    required value=supplier.supplierName
                  )

                .mb-3
                  label.form-label(for="contactPerson") Contact Person 
                    span.text-danger *
                  input#contactPerson.form-control(
                    type="text" name="contactPerson"
                    required value=supplier.contactPerson
                  )

                .mb-3
                  label.form-label(for="email") Email 
                    span.text-danger *
                  input#email.form-control(
                    type="email" name="email"
                    required value=supplier.email
                  )

                .mb-3
                  label.form-label(for="phone") Phone 
                    span.text-danger *
                  input#phone.form-control(
                    type="tel" name="phone"
                    pattern="[+0-9\\s-]{7,}"
                    required value=supplier.phone
                  )

                .mb-3
                  label.form-label(for="address") Address 
                    span.text-danger *
                  input#address.form-control(
                    type="text" name="address"
                    required value=supplier.address
                  )

                .mb-3
                  label.form-label(for="supplyCategory") Supply Category 
                    span.text-danger *
                  select#supplyCategory.form-select(name="supplyCategory" required)
                    option(value="Timber" selected=supplier.supplyCategory=="Timber") Timber
                    option(value="Poles" selected=supplier.supplyCategory=="Poles") Poles
                    option(value="Hard-Wood" selected=supplier.supplyCategory=="Hard-Wood") Hard Wood
                    option(value="Soft-Wood" selected=supplier.supplyCategory=="Soft-Wood") Soft Wood

                .mb-3
                  label.form-label(for="notes") Notes
                  textarea#notes.form-control(name="notes" rows="3")= supplier.notes

                .d-flex.justify-content-between.mt-4
                  button.btn.btn-warning(type="submit") Update Supplier
                  a.btn.btn-outline-secondary(href="/view-supplier") Cancel

                p.text-muted.mt-2 Ensure supplier details are accurate before saving.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
