doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Wood Stock | MWF Ltd
    link(rel="stylesheet" href="../css/woodStockDisplay.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body
    .container.py-5
      .d-flex.justify-content-between.align-items-center.mb-3
        h2.mb-0 Wood Stock
        a.btn.btn-primary(href="/registerWood") Add Stock
      .input-group.mb-3
        input#searchInput.form-control(type="text" placeholder="Search wood stock...")

      .table-responsive
        table.table.table-striped.table-bordered.align-middle
          thead
            tr
              th Product Name
              th Type
              th Cost Price (UGX)
              th Selling Price (UGX)
              th Quantity
              th Supplier
              th Date Received
              th Quality
              th Color
              th Measurements
              th Edit
              th Delete
          tbody#woodTableBody
            if wood && wood.length
              each item in wood
                tr
                  td= item.productName
                  td= item.productType
                  td= item.costPrice
                  td= item.sellingPrice
                  td= item.quantity
                  td= item.supplierName
                  td= item.date.toLocaleDateString()
                  td= item.quality
                  td= item.color || ""
                  td= item.measurements || ""
                  td
                    a.btn.btn-sm.btn-info(href=`/editWood/${item._id}`) ‚úèÔ∏èEdit
                  td
                    button.btn.btn-sm.btn-danger(onclick=`deleteWood('${item._id}')`) üóë Delete
            else
              tr
                td(colspan="12") No wood stock found.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    script(src="../js/woodStockDisplay.js")
