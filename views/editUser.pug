extends managerDashboardLayout

block content
  .container.py-5
    .row.justify-content-center
      .col-lg-8
        .card.shadow-lg.rounded-4
          .card-header.bg-primary.text-white.text-center.py-3.rounded-top-4
            h3 Edit User Information
          .card-body.p-4
            form(action=`/edit-user/${user._id}` method="POST" autocomplete="on" novalidate)
              
              .mb-3
                label.form-label(for="fullName") Full Name
                  span.text-danger *
                input#fullName.form-control(type="text" name="fullName" required value=user.fullName)

              .mb-3
                label.form-label(for="email") Email
                  span.text-danger *
                input#email.form-control(type="email" name="email" required value=user.email)

              .mb-3
                label.form-label(for="phone") Phone
                  span.text-danger *
                input#phone.form-control(type="tel" name="phone" required pattern="[+0-9\s-]{7,}" value=user.phone)

              .mb-3
                label.form-label(for="username") Username
                  span.text-danger *
                input#username.form-control(type="text" name="username" minlength="3" maxlength="24" required value=user.username)

              .mb-3
                label.form-label(for="role") Role
                  span.text-danger *
                select#role.form-select(name="role" required)
                  option(value="") -- Select Role --
                  option(value="Manager" selected=(user.role=="Manager")) Manager
                  option(value="Sales-Agent" selected=(user.role=="Sales-Agent")) Sales Agent

              .mb-3
                label.form-label(for="status") Status
                  span.text-danger *
                select#status.form-select(name="status" required)
                  option(value="Active" selected=(user.status=="Active")) Active
                  option(value="Inactive" selected=(user.status=="Inactive")) Inactive

              .d-flex.justify-content-between.mt-4
                button.btn.btn-primary(type="submit") Update User
                a.btn.btn-outline-secondary(href="/displayUsers") Cancel

            p.text-muted.mt-2 Please ensure all user details are accurate before saving.

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
