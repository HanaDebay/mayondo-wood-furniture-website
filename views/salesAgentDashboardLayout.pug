doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title MWF Sales Agent Dashboard
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="../css/salesAgentDashboard.css" rel="stylesheet")
  body
    .sidebar
      .sidebar-header
        img.logo(src="/images/mwflogo2.png" alt="MWF Logo")
        button#toggleBtn.btn.btn-sm(type="button" aria-expanded="true" aria-label="Toggle sidebar")
          span.icon ☰
      //- img.profile-img(src="../images/salesAgentProfile.jpg" alt="Sales Agent Photo")
      //- h4#agentName= agent.fullName

      nav.sidebar-links
        a(href="/sales-agent-dashboard")
          span.icon 📊
          span.text Dashboard
        a(href="/record-sale")
          span.icon 💵
          span.text Record Sale
        a(href="/view-stock")
          span.icon 📦
          span.text View Stock
        a(href="/my-sales")
          span.icon 📈
          span.text My Sales Reports
        hr
        a(href="/index")
          span.icon 🏠
          span.text Home
        hr
        a.text-danger(href="/logout")
          span.icon 🚪
          span.text Logout

    .content
      block content
  script(src="/js/sideToggler.js")  

