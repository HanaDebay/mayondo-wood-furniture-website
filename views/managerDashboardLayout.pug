doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title MWF Manager Dashboard
    link(rel="icon", type="image/png", sizes="32x32", href="/images/favicon.ico")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")
    link(href="/css/dashboard.css" rel="stylesheet")
    link(rel="stylesheet" href="/css/signup.css")
    link(rel="stylesheet" href="/css/registerSupplier.css")
    link(rel="stylesheet" href="/css/allSales.css")
    


  body
    .sidebar
      .sidebar-header.position-relative
        span#sidebarToggle.fs-4.position-absolute.top-0.end-0.p-2
          i.fas.fa-bars
        img.profile-img.mx-auto.mt-4(src="../images/mwflogo2.png" alt="logo")
      nav.sidebar-links
        a(href="/manager-dashboard") 
          span.icon 📊 
          span.text Dashboard
        a(href="/register-user") 
          span.icon 👨‍💼 
          span.text Register Sales-Agent
        a(href="/register-supplier") 
          span.icon 🏭 
          span.text Register Supplier
        a(href="/registerFurniture") 
          span.icon 🛋️ 
          span.text Add Furniture Stock
        a(href="/registerWood") 
          span.icon 🪵 
          span.text Add Wood Stock
        a(href="/all-sales") 
          span.icon 💰 
          span.text Generate Sales Reports
        a(href="/view-user") 
          span.icon 🧑‍💼 
          span.text View Users
        a(href="#viewStockSubmenu" class="d-block text-decoration-none" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="viewStockSubmenu") 
          span.icon 📄 
          span.text View Stock
        div.collapse.ms-3#viewStockSubmenu
          a(href="/view-wood-stock" class="d-block text-decoration-none mt-1") 
            span.icon 🪵 
            span.text Wood Stock
          a(href="/view-furniure-stock" class="d-block text-decoration-none mt-1") 
            span.icon 🛋️ 
            span.text Furniture Stock

        hr
        a(href="/index") 
          span.icon 🏠 
          span.text Home
        hr
        a.text-danger(href="/logout") 
          span.icon 🚪 
          span.text Logout
  block content 
    .content

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
  script(src="/js/allSales.js")   
  script(src="/js/signup.js")   