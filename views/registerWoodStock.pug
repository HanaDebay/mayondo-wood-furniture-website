doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Register Wood Stock | MWF Ltd
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="../css/woodStock.css")
  body
    .container.py-5
      .row.justify-content-center
        .col-lg-8
          .card.shadow-lg.rounded-4
            .card-header.bg-primary.text-white.text-center.py-3.rounded-top-4
              h3 Register Wood Stock
            .card-body.p-4
              form(action="/registerWood" method="POST" autocomplete="on" novalidate)
                .mb-3
                  label.form-label(for="productName") Product Name 
                    span.text-danger *
                  input#productName.form-control(type="text" name="productName" placeholder="e.g., Mukasa Hardwood Plank" required)
                .mb-3
                  label.form-label(for="productType") Product Type 
                    span.text-danger *
                  select#productType.form-select(name="productType" required)
                    option(value="" disabled selected) Select type
                    option(value="timber") Timber
                    option(value="poles") Poles
                    option(value="hardwood") Hardwood
                    option(value="softwood") Softwood
                .row.g-3
                  .col-md-4
                    label.form-label(for="costPrice") Cost Price (UGX) 
                      span.text-danger *
                    input#costPrice.form-control(type="number" name="costPrice" min="0" step="0.01" required)
                  .col-md-4
                    label.form-label(for="sellingPrice") Selling Price (UGX) 
                      span.text-danger *
                    input#sellingPrice.form-control(type="number" name="sellingPrice" min="0" step="0.01" required)
                  .col-md-4
                    label.form-label(for="quantity") Quantity 
                      span.text-danger *
                    input#quantity.form-control(type="number" name="quantity" min="0" step="1" required)
                .mb-3.mt-3
                  label.form-label(for="supplierName") Supplier Name 
                    span.text-danger *
                  input#supplierName.form-control(type="text" name="supplierName" placeholder="e.g., Kibaale Timbers Ltd" required)
                .row.g-3
                  .col-md-6
                    label.form-label(for="date") Date Received 
                      span.text-danger *
                    input#date.form-control(type="date" name="date" required)
                  .col-md-6
                    label.form-label(for="quality") Quality Grade 
                      span.text-danger *
                    select#quality.form-select(name="quality" required)
                      option(value="" disabled selected) Select quality
                      option(value="A") A (Premium)
                      option(value="B") B (Standard)
                      option(value="C") C (Economy)
                .mb-3.mt-3
                  label.form-label(for="color") Color 
                    span.text-muted (optional)
                  input#color.form-control(type="text" name="color" placeholder="e.g., Natural / Walnut")
                .mb-3
                  label.form-label(for="measurements") Measurements 
                    span.text-muted (optional)
                  input#measurements.form-control(type="text" name="measurements" placeholder="e.g., 2x4x12 ft / 180x60 cm")
                .d-flex.justify-content-between.mt-4
                  button.btn.btn-primary(type="submit") Save Stock
                  button.btn.btn-outline-secondary(type="reset") Clear
                p.text-muted.mt-2 Ensure details match the delivery note before saving.
    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    script(src="../js/woodStock.js")
