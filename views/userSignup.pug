extends managerDashboardLayout
block content
  .container.py-5
    .row.justify-content-center
      .col-lg-8
        .card.shadow-lg.rounded-4
          .card-header.bg-success.text-white.text-center.py-3.rounded-top-4
            h3 Register User
          .card-body.p-4
            form#signupForm(action="/register-user" method="POST" autocomplete="on" novalidate enctype="multipart/form-data")

              .mb-3
                label.form-label(for="fullName") Full Name 
                  span.text-danger *
                input#fullName.form-control(type="text" name="fullName" placeholder="e.g., Hana Debay" required)

              .mb-3
                label.form-label(for="email") Email 
                  span.text-danger *
                input#email.form-control(type="email" name="email" placeholder="user@mwfuganda.com" required)

              .mb-3
                label.form-label(for="phone") Phone 
                  span.text-danger *
                input#phone.form-control(type="tel" name="phone" placeholder="+256 7xx xxx xxx" required pattern="^\+?[0-9\s-]{7,15}$")

              .mb-3
                label.form-label(for="username") Username 
                  span.text-danger *
                input#username.form-control(type="text" name="username" minlength="3" maxlength="24" required)

              .mb-3
                label.form-label(for="role") Role 
                  span.text-danger *
                select#role.form-select(name="role" required)
                  option(value="" disabled selected) -- Select Role --
                  option(value="Manager") Manager
                  option(value="Sales-Agent") Sales Agent

              .row.g-3
                .col-md-6
                  label.form-label(for="password") Password 
                    span.text-danger *
                  input#password.form-control(type="password" name="password" minlength="6" required)
                .col-md-6
                  label.form-label(for="confirmPassword") Confirm Password 
                    span.text-danger *
                  input#confirmPassword.form-control(type="password" name="confirmPassword" minlength="6" required)

              .d-flex.justify-content-between.mt-4
                button.btn.btn-success(type="submit") Create Account
                button.btn.btn-outline-secondary(type="reset") Clear

              p.text-muted.mt-2 By submitting, you agree that all provided information is accurate.
    div#messageModal.modal.fade(tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true")
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-header
            h5#messageModalLabel.modal-title Message
            button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
          .modal-body#messageModalBody.text-center
            | ...
          .modal-footer
            button.btn.btn-primary(type="button" data-bs-dismiss="modal") OK
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
  script(src="../js/signup.js")
