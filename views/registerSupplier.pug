extends managerDashboardLayout
block content
    .container.py-5
      .row.justify-content-center
        .col-lg-8
          .card.shadow-lg.rounded-4
            .card-header.text-white.text-center.py-3.rounded-top-4
              h3 Register Supplier
            .card-body.p-4
              form(action="/register-supplier" method="POST" autocomplete="on" novalidate)
                .mb-3
                  label.form-label(for="supplierName") Supplier Name 
                    span.text-danger *
                  input#supplierName.form-control(type="text" name="supplierName" placeholder="e.g., Kibaale Timbers Ltd" required)

                .mb-3
                  label.form-label(for="contactPerson") Contact Person 
                    span.text-danger *
                  input#contactPerson.form-control(type="text" name="contactPerson" placeholder="e.g., John Doe" required)

                .mb-3
                  label.form-label(for="email") Email 
                    span.text-danger *
                  input#email.form-control(type="email" name="email" placeholder="supplier@email.com" required)

                .mb-3
                  label.form-label(for="phone") Phone 
                    span.text-danger *
                  input#phone.form-control(type="tel" name="phone" placeholder="+256 7xx xxx xxx" pattern="[+0-9\\s-]{7,}" required)

                .mb-3
                  label.form-label(for="address") Address 
                    span.text-danger *
                  input#address.form-control(type="text" name="address" placeholder="e.g., Industrial Area, Kampala" required)

                .mb-3
                  label.form-label(for="supplyCategory") Supply Category 
                    span.text-danger *
                  select#supplyCategory.form-select(name="supplyCategory" required)
                    option(value="" disabled selected) Select category
                    option(value="Timber") Timber
                    option(value="Poles") Poles
                    option(value="Hard-Wood") Hard Wood
                    option(value="Soft-Wood") Soft Wood

                .mb-3
                  label.form-label(for="notes") Notes 
                    span.text-muted (optional)
                  textarea#notes.form-control(name="notes" rows="3" placeholder="Additional details about the supplier...")

                .d-flex.justify-content-between.mt-4
                  button.btn.btn-success(type="submit") Save Supplier
                  button.btn.btn-outline-secondary(type="reset") Clear

                p.text-muted.mt-2 Ensure supplier details are accurate before saving.

    script(src="../js/registerSupplier.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
