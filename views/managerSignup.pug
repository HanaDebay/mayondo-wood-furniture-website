doctype html
html(lang="en")
  head
    title MWF - Manager Signup
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="icon", type="image/png", sizes="32x32", href="/images/favicon.ico")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/managerSignup.css")

  body.signup-bg
    .container-fluid.min-vh-100.d-flex.align-items-center.justify-content-center
      .card.signup-card.shadow-lg.border-0.rounded-4.p-4(style="max-width: 500px; width: 100%;")
        .text-center.mb-4
          img(src="/images/mwflogo2.png", alt="MWF Logo", class="logo mb-2")
          h3.text-success.mt-2 MANAGER REGISTRATION
          p.text-dark.mb-0 CREATE AN ACCOUNT TO MANAGE YOUR TEAM AND STOCK.

        form(action="/register-manager" method="POST" enctype="multipart/form-data")
          .mb-3
            label.form-label.text-dark(for="fullName") Full Name
            input#fullName.form-control(type="text" name="fullName" placeholder="Enter full name" required)

          .mb-3
            label.form-label.text-dark(for="email") Email Address
            input#email.form-control(type="email" name="email" placeholder="Enter email address" required)

          .mb-3
            label.form-label.text-dark(for="phone") Phone Number
            input#phone.form-control(type="tel" name="phone" placeholder="Enter phone number" required)

          .mb-3
            label.form-label.text-dark(for="username") Username
            input#username.form-control(type="text" name="username" placeholder="Enter username" required)

          .mb-3
            label.form-label.text-dark(for="password") Password
            input#password.form-control(type="password" name="password" placeholder="Create a password" required)

          .mb-3
            label.form-label.text-dark(for="profileImage") Profile Picture
            input#profileImage.form-control(type="file" name="profileImage" accept="image/*")

          button.btn.btn-success.w-100.mt-3.py-2(type="submit") Create Account

        .text-center.mt-4
          p.text-dark.mb-1 Already have an account?
            a.text-success.ms-1(href="/login") Login here
          a.text-secondary.small(href="/") ‚Üê Back to Home

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
