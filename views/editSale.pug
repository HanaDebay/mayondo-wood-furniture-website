doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Edit Sale | MWF Ltd
    link(rel="stylesheet" href="../css/editSale.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body
    .container.py-5
      h2.mb-4 Edit Sale

      form(action=`/sales/edit/${sale._id}?_method=PUT` method="POST")
        .mb-3
          label.form-label(for="productName") Product Name
          input.form-control(type="text" id="productName" name="productName" value=sale.productName readonly)

        .mb-3
          label.form-label(for="productType") Product Type
          input.form-control(type="text" id="productType" name="productType" value=sale.productType readonly)

        .mb-3
          label.form-label(for="quantity") Quantity
          input.form-control(type="number" id="quantity" name="quantity" value=sale.quantity required)

        .mb-3
          label.form-label(for="sellingPrice") Selling Price
          input.form-control(type="number" id="sellingPrice" name="sellingPrice" value=sale.sellingPrice readonly)

        .mb-3
          label.form-label(for="totalCost") Total Cost
          input.form-control(type="number" id="totalCost" name="totalCost" value=sale.totalCost readonly)

        .mb-3
          label.form-label(for="customerName") Customer Name
          input.form-control(type="text" id="customerName" name="customerName" value=sale.customerName required)

        .mb-3
          label.form-label(for="paymentMethod") Payment Method
          select.form-select(name="paymentMethod" required)
            option(value="Cash" selected=(sale.paymentMethod==="Cash")) Cash
            option(value="Credit" selected=(sale.paymentMethod==="Credit")) Credit
            option(value="MobileMoney" selected=(sale.paymentMethod==="MobileMoney")) Mobile Money

        .mb-3
          label.form-label(for="transportation") Transportation
          select.form-select(name="transportation" required)
            option(value="self" selected=(sale.transportation==="self")) Self
            option(value="company" selected=(sale.transportation==="company")) Company

        .mb-3
          label.form-label(for="dateOfSale") Date of Sale
          input.form-control(type="date" id="dateOfSale" name="dateOfSale" value=sale.dateOfSale.toISOString().slice(0,10) required)

        button.btn.btn-success(type="submit") Update Sale
        a.btn.btn-secondary.ms-2(href="/sales/all-sales") Cancel

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
